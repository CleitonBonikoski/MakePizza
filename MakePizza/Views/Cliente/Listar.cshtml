@using MakePizza.Models
@model List<Cliente>

@{
    ViewBag.Title = "Clientes Cadastrados";
}
<h2>Clientes Cadastrados:</h2>
<div>
    @Html.ActionLink("Cadastrar Novo Cliente", "CadastrarCliente", "Cliente")

    <table class="table table-hover table-striped"
           style="margin-top:30px">
        <tr>
            <th>Nome</th>
            <th>CEP</th>
            <th>CPF</th>
            <th>Email</th>
            <th>Senha</th>
            <th>Admin</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (Cliente cliente in Model)
        {
        <tr>
            <td>@cliente.NomeCliente</td>
            <td>@cliente.CepCliente</td>
            <td>@cliente.CpfCliente</td>
            <td>@cliente.EmailCliente</td>
            <td>@cliente.SenhaCliente</td>
            <td>@cliente.AdminCliente</td>

        </tr>
        }
    </table>

    <p>Dados atualizados às: <b> @DateTime.Now </b></p>

</div>

