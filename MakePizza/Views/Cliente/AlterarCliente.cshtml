
@using MakePizza.Models
@model Cliente
@{
    ViewBag.Title = "Alterar Cliente";
}


<div>
    @using (Html.BeginForm("AlterarCliente", "Cliente", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend>Alterar Cliente</legend>
            @Html.ValidationSummary(true, null,
                                new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IdCategoria)
            <div class="form-group">
                @Html.Label("Categoria",
                                    new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.NomeCategoria,
                                        new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Categoria"
                                        })
                    @Html.ValidationMessageFor(model => model.NomeCategoria, null,
                                        new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descrição da Categoria",
                                    new { @class = "control-label col-sm-3" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.DescricaoCategoria,
                                        new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Descrição da Categoria"
                                        })
                    @Html.ValidationMessageFor(model => model.DescricaoCategoria, null,
                                        new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.StatusCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.StatusCategoria)
                        @Html.ValidationMessageFor(model => model.StatusCategoria, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Salvar"
                           class="btn btn-primary">
                </div>
            </div>
        </fieldset>
    }
</div>


