@using MakePizza.Models

@model Pizza

@{
	List<Pizza> lstPizzas = ViewBag.Pizzas;
}

@using (Html.BeginForm("Home", "Pedido", FormMethod.Post))
{
	<div class="form-horizontal">
		<h>Confirmar Pizza</h>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			@foreach (Pizza pizza in lstPizzas)
			{
				<input type="checkbox" value="@pizza.IdPizza" name="IdCheckBox" checked="checked" id="@pizza.IdPizza">
				@Html.Label(pizza.GuidPizza); 
				@Html.Label(Convert.ToString(pizza.PrecoPizza));
				<br />
			}
			<br />
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Confirmar Pedido" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("AddIngredientesNaPizza", "AddIngredientesNaPizza", "Pizza")
</div>
