@using MakePizza.Models
@model Ingrediente
@{
    ViewBag.Title = "Alterar Ingrediente";
}

<div>
    @using (Html.BeginForm("AlterarIngrediente", "Ingrediente", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    <fieldset>
        <legend>Alterar Ingredientes</legend>
        @Html.ValidationSummary(true, null,
                             new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdIngrediente)
        <div class="form-group">
            @Html.Label("Nome do Ingrediente",
                                 new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.NomeIngrediente,
                                     new
                                     {
                                         @class = "form-control",
                                         @placeholder = "Nome do Ingrediente"
                                     })
                @Html.ValidationMessageFor(model => model.NomeIngrediente, null,
                                     new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Preço do Ingrediente",
                                 new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.PrecoIngrediente,
                                     new
                                     {
                                         @class = "form-control",
                                         @placeholder = "Preço do Ingrediente"
                                     })
                @Html.ValidationMessageFor(model => model.PrecoIngrediente, null,
                                     new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CategoriaIngrediente, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.DropDownList("Categorias", null,
                     " -- SELECIONE -- ", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StatusIngrediente, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox" style="margin-left:20px">
                    @Html.EditorFor(model => model.StatusIngrediente)Disponível
                    @Html.ValidationMessageFor(model => model.StatusIngrediente, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Salvar"
                       class="btn btn-primary">
            </div>
        </div>
    </fieldset>
    }
</div>

